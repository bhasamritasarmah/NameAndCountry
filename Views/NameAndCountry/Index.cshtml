@model NameAndCountry.Models.Country

@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width = device-width" />
	<title>Form Fill-up</title>
</head>
<body>
	<div>
		@using(Html.BeginForm("Index", "NameAndCountry", FormMethod.Post))
		{
			<table cellpadding="0" cellspacing="0">
				<tr>
					<th colspan="2" align="center">Name and Country</th>
				</tr>
				<tr>
					<td>Person Name:</td>
					<td>@Html.TextBoxFor(m => m.PersonName)</td>
				</tr>
				<tr>
					<td>Country Name:</td>
					<td>@Html.TextBoxFor(m => m.CountryName)</td>
				</tr>
				<tr>
					<td></td>
					<td><input type ="submit" value="Submit" /></td>
				</tr>
			</table>
		}
	</div>
</body>
</html>
