@model NameAndCountry.Models.Country

@{
    ViewData["Title"] = "Form Fill-Up";
}

<div class="text-center">
	@using (Html.BeginForm("Index", "NameAndCountry", FormMethod.Post))
	{
		<table cellpadding="0" cellspacing="0">
			<tr>
				<th colspan="2" align="center">Name and Country</th>
			</tr>
			<tr>
				<td>Person Name:</td>
				<td>@Html.TextBoxFor(m => m.PersonName)</td>
			</tr>
			<tr>
				<td>Country Name:</td>
				<td>@Html.TextBoxFor(m => m.CountryName)</td>
			</tr>
			<tr>
				<td></td>
				<td><input type="submit" value="Submit" /></td>
			</tr>
		</table>
	}
</div>
